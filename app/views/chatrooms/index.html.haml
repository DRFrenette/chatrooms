%section#content
  .content-wrap
    .container.clearfix
      .heading-block.center.nobottomborder
        = image_tag "slogan.svg"
      .col_one_third.topmargin
      .col_one_third.topmargin
        .feature-box.fbox-center.fbox-light.fbox-plain
          .fbox-icon
            %a{:href => "#"}
              %i.icon-comments-alt
          %h3 Active Chatrooms
          %ul.nobottommargin
            - @chatrooms.each do |chatroom|
              %li
                = link_to chatroom.name, chatroom_path(chatroom)
                = link_to chatroom_chatroom_users_path(chatroom), method: :post do
                  %i.icon-plus
                = link_to chatroom_chatroom_users_path(chatroom), method: :delete do
                  %i.icon-line-cross
      .col_one_third.col_last.topmargin
        .feature-box.fbox-center.fbox-light.fbox-plain
          .fbox-icon
            = link_to new_chatroom_path do
              %i.icon-plus
          %h3 Start a New Chat
